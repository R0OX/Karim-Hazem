<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".login_activity">

    <RelativeLayout android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout android:id="@+id/page_student_ek1"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        >

            <RelativeLayout
                android:id="@+id/student_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/mainbg">


                <Button
                    android:id="@+id/regbutton"
                    android:layout_width="331dp"
                    android:layout_height="65dp"
                    android:layout_below="@+id/reqdet"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="29dp"
                    android:backgroundTint="#8C51FE"
                    android:fontFamily="@font/inter_semibold"
                    android:onClick="reg"
                    android:text="Back"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    app:cornerRadius="50dp" />

                <ImageView
                    android:id="@+id/white"
                    android:layout_width="212dp"
                    android:layout_height="212dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="120dp"
                    android:contentDescription="white"
                    android:src="@drawable/white" />

                <TextView
                    android:id="@+id/req"
                    android:layout_width="259dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/white"
                    android:layout_marginTop="55dp"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center_horizontal|top"
                    android:text="Your Request has been sent..."
                    android:textAppearance="@style/hello" />

                <TextView
                    android:id="@+id/reqdet"
                    android:layout_width="299dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/req"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="57dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="55dp"
                    android:fontFamily="@font/inter"
                    android:gravity="center_horizontal|top"
                    android:layout_centerHorizontal="true"
                    android:lineSpacingExtra="2sp"
                    android:text="Please contact your University for more information and wait for a confirmation mail..."
                    android:textAppearance="@style/welcome"
                    android:translationY="-0.92sp" />

                <TextView
                    android:id="@+id/do_not_forg"
                    android:layout_width="311dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/regbutton"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="50dp"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center_horizontal|top"
                    android:text="for now you cannot access the app until the approval is done"
                    android:textAppearance="@style/do_not_forg" />

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
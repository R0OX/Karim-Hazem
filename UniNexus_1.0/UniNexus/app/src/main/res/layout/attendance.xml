<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_activity"
    android:background="@drawable/img">


    <Button
        android:id="@+id/logbutton"
        android:layout_width="342dp"
        android:layout_height="63dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/atbut"
        android:text="Start"
        android:textAllCaps="false"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:cornerRadius="50dp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame1"
        app:layout_constraintVertical_bias="0.92" />

    <Spinner
        android:id="@+id/frame2"
        android:layout_width="365dp"
        android:layout_height="62dp"
        android:background="@drawable/atinput"
        app:layout_constraintBottom_toTopOf="@+id/frame1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/frame1"
        android:layout_width="181dp"
        android:layout_height="62dp"
        android:background="@drawable/atinput"
        app:layout_constraintBottom_toTopOf="@+id/logbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame2"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />


    <Spinner
        android:id="@+id/frame3"
        android:layout_width="181dp"
        android:layout_height="62dp"
        android:background="@drawable/atinput"
        app:layout_constraintBottom_toTopOf="@+id/logbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toEndOf="@+id/frame1"
        app:layout_constraintTop_toBottomOf="@+id/frame2"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/details"
        android:layout_width="371dp"
        android:layout_height="487dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/idpurple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.644"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backbutton" />

    <TextView
        android:id="@+id/attendance_ek"
        android:layout_width="277dp"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal|center"
        android:gravity="center"
        android:text="Attendance"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        android:fontFamily="@font/inter_semibold"
        app:layout_constraintBottom_toTopOf="@+id/button_id"
        app:layout_constraintEnd_toEndOf="@+id/details"
        app:layout_constraintStart_toStartOf="@+id/details"
        app:layout_constraintTop_toTopOf="@+id/details" />

    <View
        android:id="@+id/button_id"
        android:layout_width="272.74dp"
        android:layout_height="280dp"
        android:alpha="0.94999998807907"
        android:background="@drawable/qrcard"
        app:layout_constraintBottom_toBottomOf="@+id/details"
        app:layout_constraintEnd_toEndOf="@+id/details"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/details"
        app:layout_constraintTop_toTopOf="@+id/details"
        app:layout_constraintVertical_bias="0.619" />

    <ImageView
        android:id="@+id/qr"
        android:layout_width="233.78dp"
        android:layout_height="244.75dp"
        android:contentDescription="qr_2"
        android:src="@drawable/qr"
        app:layout_constraintBottom_toBottomOf="@+id/button_id"
        app:layout_constraintEnd_toEndOf="@+id/button_id"
        app:layout_constraintStart_toStartOf="@+id/button_id"
        app:layout_constraintTop_toTopOf="@+id/button_id" />

    <ImageView
        android:id="@+id/backbutton"
        android:layout_width="43dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/backarrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".login_activity">

    <RelativeLayout android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout android:id="@+id/page_student_ek1"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:id="@+id/student_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/mainbg">


                <View
                    android:id="@+id/welcomecard"
                    android:layout_width="379dp"
                    android:layout_height="240dp"
                    android:layout_above="@+id/idcard"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/blue" />

                <View
                    android:id="@+id/idcard"
                    android:layout_width="385dp"
                    android:layout_height="500dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="13dp"
                    android:layout_marginBottom="42dp"
                    android:background="@drawable/idblue" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="380dp"
                    android:layout_height="97dp"
                    android:layout_below="@+id/profile"
                    android:layout_alignEnd="@+id/welcomecard"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="-9dp"
                    android:layout_marginEnd="33dp"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center"
                    android:text="Student"
                    android:textAppearance="@style/welcome_home" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profile"
                    android:layout_width="149dp"
                    android:layout_height="146dp"
                    android:layout_alignTop="@+id/welcomecard"
                    android:layout_alignEnd="@+id/welcomecard"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="117dp"
                    android:foreground="@drawable/corner"
                    app:shapeAppearanceOverlay="@style/Circular"
                    app:srcCompat="@drawable/pp" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="330dp"
                    android:layout_height="97dp"
                    android:layout_alignStart="@+id/idcard"
                    android:layout_alignTop="@+id/idcard"
                    android:layout_alignEnd="@+id/idcard"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginEnd="25dp"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center"
                    android:text="Email"
                    android:textAppearance="@style/contact" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="329dp"
                    android:layout_height="103dp"
                    android:layout_below="@+id/email"
                    android:layout_alignStart="@+id/idcard"
                    android:layout_alignEnd="@+id/idcard"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="25dp"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center"
                    android:text="num"
                    android:textAppearance="@style/contact" />

                <TextView
                    android:id="@+id/occ"
                    android:layout_width="331dp"
                    android:layout_height="98dp"
                    android:layout_below="@+id/phone"
                    android:layout_alignStart="@+id/idcard"
                    android:layout_alignEnd="@+id/idcard"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="25dp"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center"
                    android:text="occ"
                    android:textAppearance="@style/contact" />

                <TextView
                    android:id="@+id/fac"
                    android:layout_width="332dp"
                    android:layout_height="104dp"
                    android:layout_below="@+id/occ"
                    android:layout_alignStart="@+id/idcard"
                    android:layout_alignEnd="@+id/idcard"
                    android:layout_alignBottom="@+id/idcard"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="40dp"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center"
                    android:text=""
                    android:textAppearance="@style/contact" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/backbutton"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="357dp"
                android:background="@drawable/backarrow" />


        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>